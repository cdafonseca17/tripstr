<% country_codes = @user.trips.map {|trip| trip.country_code} %>
<% country_codes_map = [] %>
<% country_codes.each do |country_code| %>
  <% hash = Hash.new %>
  <% hash["id"] = country_code %>
  <% hash["showAsSelected"] = true %>
  <% country_codes_map << hash %>
<% end %>
<% @country = country_codes_map %>
