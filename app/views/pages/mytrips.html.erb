<% tripdraftcount = 0 %>
<% trippublishedcount = 0 %>
<% @trips.each do |trip| %>
<% if trip.published == false %>
<% tripdraftcount +=1 %>
<% elsif trip.published == true %>
<% trippublishedcount +=1 %>
<% end %>
<% end %>

<div class="container">
  <h2>Manage my trips</h2>
  <h4>Drafts (<%= tripdraftcount %>) </h4>
  <div class="row">
    <% @trips.each do |trip| %>
    <% if trip.published == false %>
    <div class="col-4">
      <div class="card-trip">
        <%= link_to "More Details", trip_path(trip), class: 'card-link' %>
        <%= link_to "Edit Trip", edit_trip_path(trip), class: 'card-link' %>
        <%= link_to "Delete Trip", trip_path(trip),
        method: :delete,
        data: { confirm: "Are you sure?" } %>

        <% if trip.name == 'Netherlands'  %>
        <img src="https://images.unsplash.com/photo-1558000143-a78f8299c40b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80" />
        <% elsif trip.name == 'Italy'  %>
        <img src="https://images.unsplash.com/photo-1503970999490-4404449dc349?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1938&q=80" />
        <% else  %>
        <img src="https://images.unsplash.com/photo-1490773996481-9ff25c7d9484?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80" />
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h3><%= trip.name %></h3>
            <%  trip.steps.each do |step| %>
            <%= step.location %>
            <% end %>
          </div>
          <img src="https://media.licdn.com/dms/image/C4E03AQGoXplFFOtXdQ/profile-displayphoto-shrink_800_800/0?e=1579737600&v=beta&t=DIQ4dYohLrYxeelnZSJvN2meZxQ3RiPUXu70duxfMUA" class="card-trip-user avatar-bordered" />
        </div>
      </div>
    </div>
    <% end %>
    <% end %>

    <div class="col-4">
      <div class="card-trip">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
          Add a trip
        </button>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add a trip!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <% @trip = Trip.new %>
                <%= render "trips/partials/form", trip: @trip %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <h4>Published (<%= trippublishedcount %>) </h4>

  <div class="row">
    <% @trips.each do |trip| %>
    <% if trip.published == true %>
    <div class="col-4">
      <div class="card-trip">
       <%= link_to "More Details", trip_path(trip), class: 'card-link' %>
       <%= link_to "Edit Trip", edit_trip_path(trip), class: 'card-link' %>
       <%= link_to "Delete Trip", trip_path(trip),
       method: :delete,
       data: { confirm: "Are you sure?" } %>

       <% if trip.name == 'Netherlands'  %>
       <img src="https://images.unsplash.com/photo-1558000143-a78f8299c40b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80" />
       <% elsif trip.name == 'Italy'  %>
       <img src="https://images.unsplash.com/photo-1503970999490-4404449dc349?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1938&q=80" />
       <% else  %>
       <img src="https://images.unsplash.com/photo-1490773996481-9ff25c7d9484?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80" />
       <% end %>
       <div class="card-trip-infos">
        <div>
          <h3><%= trip.name %></h3>
          <%  trip.steps.each do |step| %>
          <%= step.location %>
          <% end %>
        </div>
        <img src="https://media.licdn.com/dms/image/C4E03AQGoXplFFOtXdQ/profile-displayphoto-shrink_800_800/0?e=1579737600&v=beta&t=DIQ4dYohLrYxeelnZSJvN2meZxQ3RiPUXu70duxfMUA" class="card-trip-user avatar-bordered" />
      </div>
    </div>
  </div>
</div>
</div>
<% end %>
<% end %>




