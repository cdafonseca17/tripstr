<%= simple_form_for [@trip] do |f| %>
  <%= f.input :name, label: false, placeholder: 'Enter trip name' %>
  <%= country_select("trip", "country_code", { include_blank: 'Select a country' }, { class: 'form-control', data: { attribute: "value" }})  %>
  <%# f.hidden_field :country, value: document.getElementById("trip_country_code") %>



  <%= f.hidden_field :longitude %>
  <%= f.hidden_field :latitude %>


<input type="text" name="dates" value="<%=@trip.dates%>" placeholder="<%=@trip.dates%>" class="form-control" />
<script type="text/javascript">
$(function() {

  $('input[name="dates"]').daterangepicker({
      autoUpdateInput: false,
      locale: {
          cancelLabel: 'Clear'
      }
  });

  $('input[name="dates"]').on('apply.daterangepicker', function(ev, picker) {
      $(this).val(picker.startDate.format('DD/MM/YYYY') + ' - ' + picker.endDate.format('DD/MM/YYYY'));
  });

  $('input[name="dates"]').on('cancel.daterangepicker', function(ev, picker) {
      $(this).val('');
  });

});
</script>
