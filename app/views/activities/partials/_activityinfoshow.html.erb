<h4><% if activity.category == "See" %>
  <i class="far fa-eye icon-activity"></i>
<% elsif activity.category == "Eat" %>
  <i class="fas fa-utensils icon-activity"></i>
<% elsif activity.category == "Drink" %>
  <i class="fas fa-cocktail icon-activity"></i>
<% elsif activity.category == "Sleep" %>
  <i class="fas fa-bed icon-activity"></i>
<% elsif activity.category == "Move" %>
  <i class="fas fa-bus icon-activity"></i>
<% elsif activity.category == "Comment" %>
  <i class="fas fa-comment icon-activity"></i>
<% end %>
<%= activity.name %></h4>
<div>
  <!-- ACTIVITY - SEE, EAT, DRINK, SLEEP -->
  <% if activity.category == "See" || activity.category == "Eat" || activity.category == "Drink" || activity.category == "Sleep" %>
  <div class="address-fetched">
    <p> <strong>Address:</strong> <%= activity.address %> </p>
  </div>

    <div class="d-flex photo-comment-container">
      <div class="photo-fetched-container">
        <%if activity.photo.present? %>
          <%= cl_image_tag activity.photo, width: 250, crop: :fill, class: "photo-fetched" %>
        <% else %>
          <img class="photo-fetched" src="<%= activity.photo_google %>" />
        <% end %>

    <div class="general-info-fetched">
        <div class="title">
          General information
        </div>
        <div class="d-flex tags-fetched">
          <i class="fas fa-tag"></i>

          <div class="tags-content">
            <% if activity.types.present? %>
                  <% activity.types.split(",").each do |item| %>
                    <%= "#" + item.gsub("_", "")%>
                <% end %>
               <% end %>
          </div>
        </div>

        <div class="d-flex rating-fetched">
          <i class="fab fa-google"></i>
          <div class="rating-content">
            <%= activity.rating %>
          </div>
        </div>

        <div class="d-flex url-fetched">
        <i class="fas fa-external-link-alt"></i>
          <div class="url-content">
           <%= link_to "Visit website", activity.url, target: :blank, id: "visit-website-link" %>
          </div>
        </div>
      </div>
    </div>
    <!-- GENERAL INFO ENDS FOR EAT SLEEP DRINK SEE -->

      <div class="comment-fetched-info-container">
        <div class="comment-container d-flex">
          <%# @user = @trip.user %>
          <%# @user = current_user %>

              <p><%= activity.comment %> </p>
        </div>
      </div>
    </div>

    <% else %>

      <!-- <div class="comment-fetched-info-container"> -->
        <div class="comment-container-second d-flex">

              <p><%= activity.comment %> </p>
        </div>

      <!-- </div> -->

    <% end %>

</div>
