<a data-toggle="collapse" href="#collapseEditActivity<%= activity.id %>" role="button" aria-expanded="false" aria-controls="collapseEditActivity<%= activity.id %>">
  <i class="far fa-edit"></i>
</a>

<div class="collapse" id="collapseEditActivity<%= activity.id %>">
  <div class="card card-body">
    <% if activity.category == "Comment" %>
      <%= render 'activities/partials/formcomment', trip: @trip, step: step, activity: activity %>
    <% elsif activity.category == "Sleep" %>
      <%= render 'activities/partials/formsleep', trip: @trip, step: step, activity: activity %>
    <% elsif activity.category == "Eat" %>
      <%= render 'activities/partials/formeat', trip: @trip, step: step, activity: activity %>
    <% elsif activity.category == "See" %>
      <%= render 'activities/partials/formsee', trip: @trip, step: step, activity: activity %>
    <% elsif activity.category == "Drink" %>
      <%= render 'activities/partials/formsee', trip: @trip, step: step, activity: activity %>
    <% elsif activity.category == "Move" %>
      <%= render 'activities/partials/formmove', trip: @trip, step: step, activity: activity %>
    <% end %>
  </div>
</div>
