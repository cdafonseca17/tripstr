 <div class="d-lg-flex" style="align-items: center">
   <h4><% if activity.category == "See" %>
    <i class="far fa-eye icon-activity"></i>
    <% elsif activity.category == "Eat" %>
    <i class="fas fa-utensils icon-activity"></i>
    <% elsif activity.category == "Drink" %>
    <i class="fas fa-cocktail icon-activity"></i>
    <% elsif activity.category == "Sleep" %>
    <i class="fas fa-bed icon-activity"></i>
    <% elsif activity.category == "Move" %>
    <i class="fas fa-bus icon-activity"></i>
    <% elsif activity.category == "Comment" %>
    <i class="fas fa-comment icon-activity"></i>
    <% end %>
    <%= activity.name %></h4>
    <div class="d-flex">
      <%= render 'activities/partials/activityedit', trip: @trip, step: step, activity: activity %>
      <%= render 'activities/partials/activitydelete', trip: @trip, step: step, activity: activity %>
    </div>
  </div>


<div class="collapse" id="collapseEditActivity<%= activity.id %>">
  <% if activity.category == "See" %>
    <div style="margin: 20px 0px 20px 25px;">
      <%= render 'activities/partials/formsee', trip: @trip, step: step, activity: activity %>
    </div>
  <% elsif activity.category == "Eat" %>
    <div style="margin: 20px 0px 20px 25px;">
      <%= render 'activities/partials/formeat', trip: @trip, step: step, activity: activity %>
    </div>
  <% elsif activity.category == "Drink" %>
    <div style="margin: 20px 0px 20px 25px;">
      <%= render 'activities/partials/formdrink', trip: @trip, step: step, activity: activity %>
    </div>
  <% elsif activity.category == "Sleep" %>
    <div style="margin: 20px 0px 20px 25px;">
      <%= render 'activities/partials/formsleep', trip: @trip, step: step, activity: activity %>
    </div>
  <% elsif activity.category == "Move" %>
    <div style="margin: 20px 0px 20px 25px;">
      <%= render 'activities/partials/formmove', trip: @trip, step: step, activity: activity %>
    </div>
  <% elsif activity.category == "Comment" %>
    <div style="margin: 20px 0px 20px 25px;">
      <%= render 'activities/partials/formcomment', trip: @trip, step: step, activity: activity %>
    </div>
  <% end %>
</div>


  <div>
    <% if activity.category == "See" || activity.category == "Eat" || activity.category == "Drink" || activity.category == "Sleep" %>
  <!-- <div class="address-fetched">
    <p> <strong>Address:</strong> <%= activity.address %> </p>
  </div> -->

  <div class="activity-information-container">
    <div class="d-md-flex photo-comment-container">
      <div class="photo-fetched-container">
        <%if activity.photo.present? %>
          <%= cl_image_tag activity.photo, width: 250, crop: :fill, class: "photo-fetched" %>
        <% else %>
          <img class="photo-fetched" src="<%= activity.photo_google %>" style="max-width: 400px" />
        <% end %>
      </div>
      <!-- GENERAL INFO ENDS FOR EAT SLEEP DRINK SEE -->

      <div class="comment-fetched-info-container mt-4 mt-md-0 ml-md-3">
        <div class="comment-container d-flex">
          <%# @user = @trip.user %>
          <%# @user = current_user %>

          <p><%= activity.comment %> </p>
        </div>
      </div>
    </div>
    </div>

    <% else %>

    <!-- <div class="comment-fetched-info-container"> -->
      <div class="comment-container-second d-flex" style="margin-left: 30px;">

        <p><%= activity.comment %> </p>
      </div>

      <!-- </div> -->

      <% end %>
    </div>
