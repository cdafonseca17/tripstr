<% if @steps.empty? %>
  <i class="fas fa-plus-circle icon-add-step"></i><a data-toggle="collapse" href="#collapseStepAdd" role="button" aria-expanded="false" aria-controls="collapseStepAdd" style="color: #d6d4d4">
    Add your first step
  </a>
<% else %>
  <i class="fas fa-plus-circle icon-add-step"></i><a data-toggle="collapse" href="#collapseStepAdd" role="button" aria-expanded="false" aria-controls="collapseStepAdd" style="color: #d6d4d4">
    Add new step
  </a>
<% end %>

<div class="collapse" id="collapseStepAdd">
  <div class="card card-body step-form" style="border: 0">
    <%= simple_form_for [@trip, step] do |f| %>
      <%#= f.input :location, label: false, placeholder: "Location" %>
      <%#= ("<div id='geocoder' class='geocoder'></div>").html_safe %>
      <%= f.hidden_field :location, label: false, class: "step-location-input-js" %>
      <%= f.hidden_field :address, label: false, class: "step-address-input-js" %>
      <%= f.hidden_field :latitude %>
      <%= f.hidden_field :longitude %>
      <%= ("<div id='geocoder' class='geocoder'></div>").html_safe %>
      <%= f.input :nights, placeholder: "Number of nights", label:false %>
      <%= f.submit "add", class: "btn btn-primary" %>
      <input type="hidden" name="" class="activity-photo-input-js" />
    <% end %>

    <div class="loader-form-takeover">
     <div class="loader"></div>
    </div>

  </div>
</div>









